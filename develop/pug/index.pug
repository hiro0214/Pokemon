extends /_include/_layout.pug

block screen
  .status-block.enemy-block(state="status")
    ul#enemyBall
      - for (var i = 0; i < 6; i ++)
        li.show
    .pokemon-content#enemy
      .pokemon-content__name ピカチュウ
      .pokemon-content__img
        img(src="./assets/images/pikachuu_f.png")
      .pokemon-content__lv 50
      .pokemon-content__gauge
  .status-block.player-block(state="status")
    ul#playerBall
      - for (var i = 0; i < 6; i ++)
        li.show
    .pokemon-content#player
      .pokemon-content__name リザードン
      .pokemon-content__img
        img(src="./assets/images/riza-don_b.png")
      .pokemon-content__lv 50
      .pokemon-content__gauge
        .pokemon-content__gauge--min 90
        .pokemon-content__gauge--max 110

  ul.trick
    li.current だいもんじ
    li かえんほうしゃ
    li きりさく
    li つばさでうつ
  #textBox.textbox